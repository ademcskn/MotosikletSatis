@model MVCeTicaret.Models.Customer

@{
    ViewBag.Title = "UpdateProfile";
}

<div class="row" style="margin-top:50px;">
    <h2>Profil Güncelleme Sayfası</h2>

    @using (Html.BeginForm("UpdateProfile", "Profile", FormMethod.Post))
    {
        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    <label>İsim:</label>
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.FirstName, new { @required = "required", @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    <label>Soyisim:</label>
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.LastName, new { @required = "required", @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    <label>Kullanıcı Adı:</label>
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.UserName, new { @disabled = "disabled", @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    <label>Şifre:</label>
                </div>
                <div class="col-md-10">
                    @Html.PasswordFor(x => x.Password, new { @required = "required", @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    <label>Erkek:</label>
                </div>
                <div class="col-md-10">
                    @Html.CheckBoxFor(x => x.Gender)
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    <label>Doğum Tarihi:</label>
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.BirthDate, "{0:dd.MM.yyyy}", new { @required = "required", @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    <label>Adres:</label>
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    <label>Şehir:</label>
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    <label>Ülke:</label>
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.Country, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-10 col-md-offset-2">
                    <input type="submit" value="GÜNCELLE" class="form-control btn btn-success" />
                </div>
            </div>
        </div>
    }
</div>