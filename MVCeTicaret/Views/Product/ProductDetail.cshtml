@model MVCeTicaret.Models.Product

@{
    ViewBag.Title = "ProductDetail";
}

<div class="container">
    <div class="row" style="margin-top:50px">
        <div class="col-md-3">
            <img src="@Url.Content(Model.ImageUrl)" alt="@Model.AltText" style="width:100%" class="text-center" />
        </div>
        <div class="col-md-8 col-md-offset-1">
            <h3><b> @Model.Supplier.CompanyName </b>@Model.Name</h3>
            @{
                for (int i = 0; i < 5; i++)
                {
                    <span class="glyphicon glyphicon-star-empty" style="font-size:16pt"></span>
                }
            }
            <h4>Fiyatı : @string.Format("{0:C0}", Model.UnitPrice)</h4>
            <h4><span style="background-color:lightcoral">Stok Miktarı :@Model.UnitInStock @Model.QuantityPerUnit</span></h4>


            @using (Html.BeginForm("AddtoCart", "Shopping", new { id = Model.ProductID }, FormMethod.Post))
            {
                <h4>
                    Miktar : <input type="number" name="quantity" value="1" min="1" max="@Model.UnitInStock" />
                </h4>
                <div class="row">
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-primary ">Sepete Ekle</button>
                        @Html.ActionLink("İstek Listesine Ekle", "AddToWishlist", "Shopping", new { id = Model.ProductID }, new { @class = "btn btn-success" })
                    </div>
                </div>
            }
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <ul class="nav nav-tabs">
                <li class="active">
                    <a href="#description" data-toggle="tab">Ürün Açıklaması</a>
                </li>
                <li>
                    <a href="#reviews" data-toggle="tab">Yorumlar</a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane fade in active" id="description">
                    @Html.Raw(Model.LongDescription)
                </div>
                <div class="tab-pane fade in" id="reviews">
                    <ul>
                        @{
                            foreach (var item in ViewData["Reviews"] as IEnumerable<MVCeTicaret.Models.Review>)
                            {
                                <li>
                                    <p><strong>@item.Name @item.DateTime</strong></p>
                                    <p>@item.Comment</p>

                                </li>
                            }
                        }
                    </ul>
                    <hr />
                    @{
                        if (Session["OnlineKullanici"] != null)
                        {
                            using (Html.BeginForm("AddReview", "Product", new { id = Model.ProductID }, FormMethod.Post))
                            {
                                <p>
                                    <strong>Ürünü Oyla :</strong>
                                    <input type="number" min="1" max="5" value="5" name="rate" class="form-control" />
                                </p>
                                <p>
                                    <strong>Adınız :</strong>
                                    <input type="text" name="name" class="form-control" />
                                </p>
                                <p>
                                    <strong>Yorumunuz :</strong>
                                    <textarea class="form-control" rows="3" name="review"></textarea>
                                </p>
                                <input type="submit" class="btn btn-info form-control" value="EKLE" />
                            }
                        }

                    }
                </div>
            </div>
        </div>
    </div>
</div>

